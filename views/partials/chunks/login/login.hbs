<div id="signinForm">
    <form action="/auth/login" method="post" class="form-auth">
        <h1 class="display-6 text-center my-3">Вход</h1>
        <div class="form-group my-2">
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="text" id="login_email" name="login_email" class="form-control" placeholder="Email address">
        </div>
        <div class="form-group my-2">
            <label for="login_password" class="sr-only">Password</label>
            <input type="password" id="login_password" name="login_password" class="form-control" placeholder="Password">
        </div>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
    </form>
</div>